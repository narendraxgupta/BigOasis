{
  "manifest_version": 3,
  "name": "BigOasis â€“ Time & Space Complexity",
  "description": "AI-powered LeetCode extension: Analyze code complexity with Google Gemini. Get precise Big-O time & space complexity explanations instantly.",
  "version": "1.1.0",
  "homepage_url": "https://github.com/narendraxgupta/bigoasis",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://leetcode.cn/*",
        "https://leetcode.org/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pageBridge.js"
      ],
      "matches": [
        "https://leetcode.com/*",
        "https://leetcode.cn/*",
        "https://leetcode.org/*"
      ]
    }
  ]
}